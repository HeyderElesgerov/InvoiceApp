@using InvoiceApp.UI.MVC.Models;
@model CreateUserViewModel;

<h1>Add new user</h1>

@using (Html.BeginForm())
{
    <div>
        @Html.ValidationSummary(true)
    </div>
    <div>
        <b>Name</b>
        @Html.EditorFor(m => m.Name)

        <span>@Html.ValidationMessageFor(m => m.Name)</span>
    </div>
    <br />
    <div>
        <b>Surname</b>
        @Html.EditorFor(m => m.Surname)

        <span>@Html.ValidationMessageFor(m => m.Surname)</span>
    </div>
    <br />
    <div>
        <b>Email</b>
        @Html.EditorFor(m => m.Email)

        <span>@Html.ValidationMessageFor(m => m.Email)</span>
    </div>
    <br />
    <div>
        <b>Password</b>
        @Html.EditorFor(m => m.Password)

        <span>@Html.ValidationMessageFor(m => m.Password)</span>
    </div>
    <br />
    <div>
        <b>Repeat Password</b>
        @Html.EditorFor(m => m.RePassword)

        <span>@Html.ValidationMessageFor(m => m.RePassword)</span>
    </div>
    <br />
    <div>
        <b>This user is admin?</b>
        @Html.CheckBoxFor(m => m.IsAdmin)
    </div>
    <br />
    <div>
        <input type="submit" value="Add"/>
    </div>
}